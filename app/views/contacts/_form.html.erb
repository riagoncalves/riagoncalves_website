<div class="flex w-100 h-100 flex-column justc-c align-c">
  <%= form_with(model: @contact, local: true, class: 'form-white') do |f| %>
    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

        <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field flex align-c">
      <%= f.label :icon %>
      <div class="flex flex-1 align-c justc-c">
        <%= f.file_field :icon %>
      </div>
    </div>

    <div class="field flex align-c">
      <%= f.label :social %>
      <div class="flex flex-1 align-c justc-c">
        <%= f.text_field :social %>
      </div>
    </div>

    <div class="field flex align-c">
      <%= f.label :link %>
      <div class="flex flex-1 align-c justc-c">
        <%= f.text_field :link %>
      </div>
    </div>

    <div class="actions w-100 flex align-c justc-c">
      <%= f.submit 'Save', class: 'btn btn-white' %>
    </div>
  <% end %>
</div>
