<div class="flex-wrapper fx-col fx-it-cen">
  <h2>Admin Sign In</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'f-sign'}) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: :password %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'checkLabel' %>
      </div>
    <% end -%>
  
    <div class="actions flex-wrapper fx-it-cen">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        Log In
      <% end %>
    </div>
    <div class="field flex-wrapper fx-it-cen">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

